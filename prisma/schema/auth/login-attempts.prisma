model LoginAttempt {
    id         Int       @id @default(autoincrement())
    identifier String    @unique
    ip         String
    attempts   Int       @default(0)
    lockUntil  DateTime? @map("lock_until")
    createdAt  DateTime  @default(now()) @map("created_at")
    updatedAt  DateTime  @updatedAt @map("updated_at")

    @@map("login_attempts")
}
